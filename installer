#!/usr/bin/env bash

set -euo pipefail

##? Setups the environment
#?? 1.0.0
##?
##? Usage:
##?    install

echo "ðŸš€ Welcome to the hypebeast/dotfiles installer!"
echo "-----------------------------------------------"
echo
export DOTFILES="$HOME/.dotfiles"
echo "ðŸ‘‰  Cloning into: '$DOTFILES'"

# To test that git is installed (if not macOS will prompt an installer)
