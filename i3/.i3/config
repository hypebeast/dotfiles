# Scratchpad Terminal 
bindsym $mod+Shift+$alt+t mark "terminal", move scratchpad
bindsym $mod+$alt+t [con_mark="terminal"] scratchpad show
for_window [con_mark="terminal"] move scratchpad
exec --no-startup-id i3-msg 'exec --mark terminal xfce4-terminal;'

# Spotify
bindsym $mod+$alt+m [con_mark="music"] scratchpad show
for_window [class="Spotify"] mark "music", move scratchpad
exec --no-startup-id i3-msg 'exec spotify;'

# Notes
bindsym $mod+Shift+$alt+n mark "notes", move scratchpad
bindsym $mod+$alt+n [con_mark="notes"] scratchpad show
for_window [con_mark="notes"] move scratchpad
exec --no-startup-id i3-msg 'exec --mark notes code ~/Documents/private_wiki;'

# Keepass
bindsym $mod+Shift+$alt+k mark "keepass", move scratchpad
bindsym $mod+$alt+k [con_mark="keepass"] scratchpad show
for_window [con_mark="keepass"] move scratchpad
exec --no-startup-id i3-msg 'exec --mark keepass keepassxc;'


